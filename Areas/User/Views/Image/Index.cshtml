@{
    ViewData["Title"] = "Gerar Imagem com IA";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Gerar Imagem com IA</h1>

            @using (Html.BeginForm("Generate", "Image", new { area = "User" }, FormMethod.Post))
            {
                <div class="input-group mb-3">
                    <input type="text" name="prompt" id="prompt" class="form-control" placeholder="Descreva a imagem..." required>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Gerar</button>
                    </div>
                </div>
            }

            @if (ViewBag.ImageUrl != null)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        Resultado:
                    </div>
                    <div class="card-body text-center">
                        <img src="@ViewBag.ImageUrl" alt="Imagem Gerada" class="img-fluid rounded shadow" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
