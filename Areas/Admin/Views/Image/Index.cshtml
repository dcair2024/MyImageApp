@{
    ViewData["Title"] = "Gerar Imagem com IA";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">Gerar Imagem com IA</h2>

            <!-- Formulário -->
            <form asp-action="Generate" method="post" class="mb-4">
                <div class="input-group">
                    <input type="text" name="prompt" class="form-control" placeholder="Ex: um dragão em estilo anime" required />
                    <button type="submit" class="btn btn-primary">Gerar</button>
                </div>
            </form>

            <!-- Exibição da imagem gerada -->
            @if (ViewBag.ImageUrl != null)
            {
                <div class="text-center">
                    <h5>Resultado:</h5>
                    <img src="@ViewBag.ImageUrl" alt="Imagem gerada" class="img-fluid rounded shadow" />
                </div>
            }
        </div>
    </div>
</div>
